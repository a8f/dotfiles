{
  "diagnostic.displayByAle": true,
  "suggest.autoTrigger": "always",
  "suggest.minTriggerInputLength": 2,
  "coc.preferences.triggerSignatureHelp": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        }
      }
    }
  }
}
